    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AppointmentHistoryController</servlet-name>
        <url-pattern>/appointment-history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AppointmentViewController</servlet-name>
        <url-pattern>/appointment-view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
